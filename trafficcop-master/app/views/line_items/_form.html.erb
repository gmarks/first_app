<%= form_for(@line_item) do |f| %>
  <% if @line_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@line_item.errors.count, "error") %> prohibited this line_item from being saved:</h2>

      <ul>
      <% @line_item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :disabled => true, :value => "Buyer Leads for the supplied Zip Codes", :size => 50 %>
  </div>
  <div class="field">
    <%= f.label :target_platform %><br />
    <%= f.text_field :target_platform, :disabled => true, :value => "Web" %>
  </div>
  <div class="field">
    <%= f.label :inventory_sizes %><br />
    <%= f.text_field :inventory_sizes, :size => 100 %>
  </div>
  <div class="field">
    <%= f.label :line_item_type %><br />
    <%= f.text_field :line_item_type, :disabled => true, :value => "SPONSORSHIP" %>
  </div>
  <div class="field">
    <%= f.label :start_time %><br />
    <%= text_field_tag "start_time", Date.tomorrow.strftime('%Y-%m-%d'), {:readonly=>true, :size=>"30"} %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br />
    <%= text_field_tag "end_time", Date.tomorrow.strftime('%Y-%m-%d'), {:readonly=>true, :size=>"30"} %>
  </div>
  <div class="field">
    <%= f.label :custom_criteria, "Zip Codes (Custom Criteria)" %><br />
    <%= f.text_field :custom_criteria %>
  </div>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :comment, :disabled => true, :value => "Created from prototype." %>
  </div>
  <div class="field">
    <%= f.label :units_bought %><br />
    <%= f.number_field :units_bought %>
  </div>
  <div class="field">
    <%= f.label :unit_type %><br />
    <%= f.text_field :unit_type, :disabled => true, :value => "IMPRESSIONS" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
